    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox",
            "url": "https://localhost:3000/",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "https://localhost:3000",
                    "path": "${workspaceFolder}/public"
                }
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch server.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js"
        }
    ]
}